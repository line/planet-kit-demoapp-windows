<Application
    x:Class="LINEPlanetCall.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LINEPlanetCall">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <Style x:Key="backgroundStyle" TargetType="Page">
                        <Setter Property="Background" Value="#FFFFFF" />
                    </Style>
                    <Style x:Key="textBlockStyle" TargetType="TextBlock">
                        <Setter Property="Foreground" Value="#000000" />
                    </Style>
                    <Style x:Key="LineButtonStyle" BasedOn="{StaticResource DefaultButtonStyle}" TargetType="Button">
                        <Setter Property="Background" Value="#06C755" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FocusVisualPrimaryBrush" Value="Transparent" />
                        <Setter Property="FocusVisualMargin" Value="0" />
                    </Style>
                    <Style x:Key="LineSymbolButtonStyle" BasedOn="{StaticResource DefaultButtonStyle}" TargetType="Button">
                        <Setter Property="Background" Value="#111111" />
                        <Setter Property="Foreground" Value="#DFDFDF" />
                        <Setter Property="FocusVisualPrimaryBrush" Value="Transparent" />
                        <Setter Property="FocusVisualMargin" Value="0" />
                    </Style>
                    <Style x:Key="LineRedButtonStyle" BasedOn="{StaticResource DefaultButtonStyle}" TargetType="Button">
                        <Setter Property="Background" Value="#FF334B" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FocusVisualPrimaryBrush" Value="Transparent" />
                        <Setter Property="FocusVisualMargin" Value="0" />
                    </Style>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <Style x:Key="backgroundStyle" TargetType="Page">
                        <Setter Property="Background" Value="#000000" />
                    </Style>
                    <Style x:Key="textBlockStyle" TargetType="TextBlock">
                        <Setter Property="Foreground" Value="#FFFFFF" />
                    </Style>
                    <Style x:Key="LineButtonStyle" BasedOn="{StaticResource DefaultButtonStyle}" TargetType="Button">
                        <Setter Property="Background" Value="#06C755" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FocusVisualPrimaryBrush" Value="Transparent" />
                        <Setter Property="FocusVisualMargin" Value="0" />
                    </Style>
                    <Style x:Key="LineSymbolButtonStyle" BasedOn="{StaticResource DefaultButtonStyle}" TargetType="Button">
                        <Setter Property="Background" Value="#111111" />
                        <Setter Property="Foreground" Value="#DFDFDF" />
                        <Setter Property="FocusVisualPrimaryBrush" Value="Transparent" />
                        <Setter Property="FocusVisualMargin" Value="0" />
                    </Style>
                    <Style x:Key="LineRedButtonStyle" BasedOn="{StaticResource DefaultButtonStyle}" TargetType="Button">
                        <Setter Property="Background" Value="#FF334B" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FocusVisualPrimaryBrush" Value="Transparent" />
                        <Setter Property="FocusVisualMargin" Value="0" />
                    </Style>
                </ResourceDictionary>
        </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
